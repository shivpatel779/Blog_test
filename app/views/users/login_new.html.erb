<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

    <div class="container">
      <%= form_with(url: '/login', method: 'post', class: "login-form") do |form| %>
        <h1>Login</h1>
        <% if @errors %>
          <p class="error"><%= @errors %></p>
        <% end %>
        <div class="form-group">
          <%= form.label :email, 'Email:' %><br>
          <%= form.text_field :email, class: "input-field" %><br>
        </div>
        <div class="form-group">
          <%= form.label :password, 'Password:' %><br>
          <%= form.password_field :password, class: "input-field" %><br>
        </div>
        <div class="form-group">
          <%= form.submit 'Login', class: "btn-submit" %>
        </div>
      <% end %>
      <%= link_to "Sign Up", register_path %>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function() {
        // Example: Add form validation
        document.querySelector('.login-form').addEventListener('submit', function(event) {
          const email = document.querySelector('#email').value.trim();
          const password = document.querySelector('#password').value.trim();

          if (email === '' || password === '') {
            event.preventDefault();
            document.querySelector('.error').textContent = 'Please fill in all fields.';
          }
        });
      });
    </script>
  </body>
</html>

