<!DOCTYPE html>
<html>
  <head>
    <title>Create Post</title>
    <%= stylesheet_link_tag 'post_create', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container">
      <%= form_with(url: '/posts', method: 'post', class: "create-post-form") do |form| %>
        <%= form.hidden_field :user_id, value: params[:user_id].to_i %>

        <h1>Create Post</h1>
        <% if @errors %>
          <p class="error"><%= @errors %></p>
        <% end %>
        <div class="form-group">
          <%= form.label :title, 'Title:' %><br>
          <%= form.text_field :title, class: "input-field" %><br>
        </div>
        <div class="form-group">
          <%= form.label :content, 'Content:' %><br>
          <%= form.text_field :content, class: "input-field" %><br>
        </div>
        <div class="form-group">
          <%= form.submit 'Create', class: "btn-submit" %>
        </div>
      <% end %>
      <%= link_to "Back", posts_path, class: "btn" %>
      <%= button_to "Logout", logout_path(user_id: params[:user_id].to_i), method: :delete, class: "btn" %>
    </div>
  </body>
</html>

